<% if (title) { %>
    <h1>
        <%= title %>
    </h1>
    <% } else { res.redirect('/') } %>
    <!-- Message Block -->
    <%- messages() %>
    <% if (errors) { %>
    <ul class="notice">
        <% errors.array().forEach(error=> { %>
            <li>
                <%= error.msg %>
            </li>
            <% }) %>
    </ul>
    <% } %>
    <div id="loginContainer">
        <form action="/inv/management/addClassification" method="post">
            <label>Classification: <input type="text" name="classification_name" id="classification_name" value="<%= locals.classification_name %>" pattern="[a-zA-Z0-9]{1,}" required></label>
            <label><input type="submit" name="submit" id="submit"></label>
        </form>
    </div>