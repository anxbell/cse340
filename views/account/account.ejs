<!-- Content Heading -->
<% if (title) { %>
    <h1>
        <%= title %>
    </h1>
    <% } else { res.redirect('/') } %>
    
    <!-- Message Block -->
    <%- messages() %>
    <% if (errors) { %>
    <ul class="notice">
        <% errors.array().forEach(error=> { %>
            <li>
                <%= error.msg %>
            </li>
            <% }) %>
    </ul>
    <% } %>
    
    <h2>Welcome, <%- locals.accountData.account_firstname %>!</h2>
<a href="/account/update/<%- locals.accountData.account_id %>">Update My Information</a>
<% if (locals.accountData.account_type === "Admin" || locals.accountData.account_type === "Employee") { %>
    <h3>Manage Inventory</h3>
    <a class="nav-generic" title="Go to inventory management" href="/inv">Inventory Management</a>
<% } %>